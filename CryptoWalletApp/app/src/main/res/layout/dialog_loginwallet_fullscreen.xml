<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackgroundFloating">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/mProgress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:indeterminate="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/mCaptionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/validate_pin_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/mAuthMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/mIconApp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="48dp"
            android:contentDescription="@string/app_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_cryptowallet" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/mUsePin"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mIconApp">

            <LinearLayout
                android:id="@+id/mPin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/mPin1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="@string/pin_digit"
                    app:srcCompat="@drawable/br_pin" />

                <ImageView
                    android:id="@+id/mPin2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:contentDescription="@string/pin_digit"
                    app:srcCompat="@drawable/br_pin" />

                <ImageView
                    android:id="@+id/mPin3"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:contentDescription="@string/pin_digit"
                    app:srcCompat="@drawable/br_pin" />

                <ImageView
                    android:id="@+id/mPin4"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:contentDescription="@string/pin_digit"
                    app:srcCompat="@drawable/br_pin" />

            </LinearLayout>

            <TextView
                android:id="@+id/mInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mPin" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                android:background="?attr/colorPrimary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mInfo">

                <android.support.v7.widget.GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="24dp"
                    app:columnCount="3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:rowCount="4">

                    <Button
                        android:id="@+id/mNum1"
                        style="@style/AppTheme.Button.Borderless.Colored"
                        android:layout_width="96dp"
                        android:layout_height="72dp"
                        android:onClick="handlerPad"
                        android:text="@string/pad_1_text"
                        android:textColor="?attr/textIconsColor"
                        android:textSize="30sp"
                        app:layout_column="0"
                        app:layout_row="0" />

                    <Button
                        android:id="@+id/mNum2"
                        style="@style/AppTheme.Button.Borderless.Colored"
                        android:layout_width="96dp"
                        android:layout_height="72dp"
                        android:onClick="handlerPad"
                        android:text="@string/pad_2_text"
                        android:textColor="?attr/textIconsColor"
                        android:textSize="30sp"
                        app:layout_column="1"
                        app:layout_row="0" />

                    <Button
                        android:id="@+id/mNum3"
                        style="@style/AppTheme.Button.Borderless.Colored"
                        android:layout_width="96dp"
                        android:layout_height="72dp"
                        android:onClick="handlerPad"
                        android:text="@string/pad_3_text"
                        android:textColor="?attr/textIconsColor"
                        android:textSize="30sp"
                        app:layout_column="2"
                        app:layout_row="0" />

                    <Button
                        android:id="@+id/mNum4"
                        style="@style/AppTheme.Button.Borderless.Colored"
                        android:layout_width="96dp"
                        android:layout_height="72dp"
                        android:onClick="handlerPad"
                        android:text="@string/pad_4_text"
                        android:textColor="?attr/textIconsColor"
                        android:textSize="30sp"
                        app:layout_column="0"
                        app:layout_row="1" />

                    <Button
                        android:id="@+id/mNum5"
                        style="@style/AppTheme.Button.Borderless.Colored"
                        android:layout_width="96dp"
                        android:layout_height="72dp"
                        android:onClick="handlerPad"
                        android:text="@string/pad_5_text"
                        android:textColor="?attr/textIconsColor"
                        android:textSize="30sp"
                        app:layout_column="1"
                        app:layout_row="1" />

                    <Button
                        android:id="@+id/mNum6"
                        style="@style/AppTheme.Button.Borderless.Colored"
                        android:layout_width="96dp"
                        android:layout_height="72dp"
                        android:onClick="handlerPad"
                        android:text="@string/pad_6_text"
                        android:textColor="?attr/textIconsColor"
                        android:textSize="30sp"
                        app:layout_column="2"
                        app:layout_row="1" />


                    <Button
                        android:id="@+id/mNum7"
                        style="@style/AppTheme.Button.Borderless.Colored"
                        android:layout_width="96dp"
                        android:layout_height="72dp"
                        android:onClick="handlerPad"
                        android:text="@string/pad_7_text"
                        android:textColor="?attr/textIconsColor"
                        android:textSize="30sp"
                        app:layout_column="0"
                        app:layout_row="2" />

                    <Button
                        android:id="@+id/mNum8"
                        style="@style/AppTheme.Button.Borderless.Colored"
                        android:layout_width="96dp"
                        android:layout_height="72dp"
                        android:onClick="handlerPad"
                        android:text="@string/pad_8_text"
                        android:textColor="?attr/textIconsColor"
                        android:textSize="30sp"
                        app:layout_column="1"
                        app:layout_row="2" />

                    <Button
                        android:id="@+id/mNum9"
                        style="@style/AppTheme.Button.Borderless.Colored"
                        android:layout_width="96dp"
                        android:layout_height="72dp"
                        android:onClick="handlerPad"
                        android:text="@string/pad_9_text"
                        android:textColor="?attr/textIconsColor"
                        android:textSize="30sp"
                        app:layout_column="2"
                        app:layout_row="2" />

                    <Button
                        android:id="@+id/mNum0"
                        style="@style/AppTheme.Button.Borderless.Colored"
                        android:layout_width="96dp"
                        android:layout_height="72dp"
                        android:onClick="handlerPad"
                        android:text="@string/pad_0_text"
                        android:textColor="?attr/textIconsColor"
                        android:textSize="30sp"
                        app:layout_column="1"
                        app:layout_row="3" />

                    <ImageButton
                        android:id="@+id/mBackSpace"
                        android:layout_width="96dp"
                        android:layout_height="72dp"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/backspace_pad"
                        android:onClick="handlerBackspace"
                        app:layout_column="2"
                        app:layout_row="3"
                        app:srcCompat="@drawable/ic_backspace_outline" />

                </android.support.v7.widget.GridLayout>

            </android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/mFingerprintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mIconApp">

            <ImageView
                android:id="@+id/mFingerprint"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/fingerprint_description"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_fingerprint" />

            <TextView
                android:id="@+id/mFingerInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="64dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="64dp"
                android:text="@string/fingerprint_indication"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mFingerprint" />

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.design.widget.CoordinatorLayout>