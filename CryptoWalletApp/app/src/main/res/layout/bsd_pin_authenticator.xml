<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="24dp"
    android:paddingTop="24dp"
    android:paddingEnd="24dp"
    android:theme="?attr/pinKeyboardTheme">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/authenticate_title"
        android:textAppearance="?attr/textAppearanceHeadline6" />

    <TextView
        android:id="@+id/mAuthDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxLines="2"
        android:text="@string/enter_pin"
        android:textAppearance="?attr/textAppearanceBody1" />

    <LinearLayout
        android:id="@+id/mAuthPinDigitsLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/pin_size"
            android:layout_height="@dimen/pin_size"
            android:layout_weight="0"
            android:contentDescription="@string/pin_digit"
            app:srcCompat="@drawable/asl_pin_value" />

        <ImageView
            android:layout_width="@dimen/pin_size"
            android:layout_height="@dimen/pin_size"
            android:layout_marginStart="8dp"
            android:layout_weight="0"
            android:contentDescription="@string/pin_digit"
            app:srcCompat="@drawable/asl_pin_value" />

        <ImageView
            android:layout_width="@dimen/pin_size"
            android:layout_height="@dimen/pin_size"
            android:layout_marginStart="8dp"
            android:layout_weight="0"
            android:contentDescription="@string/pin_digit"
            app:srcCompat="@drawable/asl_pin_value" />

        <ImageView
            android:layout_width="@dimen/pin_size"
            android:layout_height="@dimen/pin_size"
            android:layout_marginStart="8dp"
            android:layout_weight="0"
            android:contentDescription="@string/pin_digit"
            app:srcCompat="@drawable/asl_pin_value" />

        <ImageView
            android:layout_width="@dimen/pin_size"
            android:layout_height="@dimen/pin_size"
            android:layout_marginStart="8dp"
            android:layout_weight="0"
            android:contentDescription="@string/pin_digit"
            app:srcCompat="@drawable/asl_pin_value" />

        <ImageView
            android:layout_width="@dimen/pin_size"
            android:layout_height="@dimen/pin_size"
            android:layout_marginStart="8dp"
            android:layout_weight="0"
            android:contentDescription="@string/pin_digit"
            app:srcCompat="@drawable/asl_pin_value" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mAuthKeyboardLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="16dp"
        android:paddingBottom="24dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                style="?attr/borderlessButtonStyle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="@string/pad_1_text" />

            <Button
                style="?attr/borderlessButtonStyle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="@string/pad_4_text" />

            <Button
                style="?attr/borderlessButtonStyle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="@string/pad_7_text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                style="?attr/borderlessButtonStyle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="@string/pad_2_text" />

            <Button
                style="?attr/borderlessButtonStyle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="@string/pad_5_text" />

            <Button
                style="?attr/borderlessButtonStyle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="@string/pad_8_text" />

            <Button
                style="?attr/borderlessButtonStyle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="@string/pad_0_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                style="?attr/borderlessButtonStyle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="@string/pad_3_text" />

            <Button
                style="?attr/borderlessButtonStyle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="@string/pad_6_text" />

            <Button
                style="?attr/borderlessButtonStyle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="@string/pad_9_text" />

            <Button
                style="?attr/borderlessButtonStyle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:icon="@drawable/ic_backspace_outline" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
