<resources>
    <!-- Blue theme -->
    <style name="AppTheme.Blue" parent="AppTheme.Dark">
        <item name="colorPrimary">@color/bluePrimary</item>
        <item name="colorPrimaryDark">@color/blueDarkPrimary</item>
        <item name="colorAccent">@color/blueAccent</item>
        <item name="colorBackground">@color/blueBackground</item>
        <item name="colorSurface">@color/blueSurface</item>
        <item name="colorPendingTx">@color/colorPendingTx</item>
        <item name="colorReceivedTx">@color/colorReceiveTx</item>
        <item name="colorSentTx">@color/colorSendTx</item>
        <item name="colorSplashBackground">@color/blueBackground</item>

        <item name="txEmptyListDrawable">@drawable/ic_txemptylist</item>

        <item name="bottomSheetDialogTheme">@style/AppTheme.Blue.BottomSheetDialog</item>
        <item name="fullScreenDialogTheme">@style/AppTheme.Blue.FullScreenDialog</item>
        <item name="materialCardViewStyle">@style/AppTheme.Blue.CardView</item>
        <item name="borderlessButtonStyle">@style/Widget.MaterialComponents.Button.TextButton</item>
        <item name="pinKeyboardTheme">@style/AppTheme.Blue.PinKeyboard</item>
        <item name="alertDialogTheme">@style/AppTheme.Blue.AlertDialog</item>
        <item name="android:alertDialogTheme">@style/AppTheme.Blue.AlertDialog</item>
    </style>

    <style name="AppTheme.Blue.BottomSheetDialog" parent="AppTheme.Dark.BottomSheetDialog">
        <item name="colorAccent">@color/blueAccent</item>
        <item name="colorPrimary">@color/bluePrimary</item>
        <item name="colorPrimaryDark">@color/blueDarkPrimary</item>
        <item name="colorSurface">@color/blueCardBackground</item>
    </style>

    <style name="AppTheme.Blue.PinKeyboard" parent="@style/AppTheme.Dark.PinKeyboard">
        <item name="colorAccent">@color/blueAccent</item>
        <item name="colorPrimary">@color/bluePrimary</item>
        <item name="colorPrimaryDark">@color/blueDarkPrimary</item>
        <item name="colorSurface">@color/blueCardBackground</item>
    </style>

    <style name="AppTheme.Blue.FullScreenDialog" parent="AppTheme.Dark.FullScreenDialog">
        <item name="colorAccent">@color/blueAccent</item>
        <item name="colorPrimary">@color/bluePrimary</item>
        <item name="colorPrimaryDark">@color/blueDarkPrimary</item>
        <item name="colorSurface">@color/blueCardBackground</item>
    </style>

    <style name="AppTheme.Blue.CardView" parent="CardView.Dark">
        <item name="cardBackgroundColor">@color/blueCardBackground</item>
    </style>

    <style name="AppTheme.Blue.AlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">@color/blueCardBackground</item>
        <item name="colorSurface">#0000FF</item>
        <item name="colorPrimary">#FF0000</item>
    </style>

    <!-- Blue colors -->
    <color name="bluePrimary">#CE93D8</color>
    <color name="blueDarkPrimary">#1E004a</color>
    <color name="blueAccent">#E040FB</color>
    <color name="blueBackground">#003982</color>
    <color name="blueSurface">#192b60</color>
    <color name="blueCardBackground">#3162b2</color>
</resources>
