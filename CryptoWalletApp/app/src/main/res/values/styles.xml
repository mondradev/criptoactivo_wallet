<resources>

    <!-- Splash background -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar" />

    <!-- Light Theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/lightPrimary</item>
        <item name="colorPrimaryDark">@color/lightDarkPrimary</item>
        <item name="colorAccent">@color/lightAccent</item>
        <item name="colorBackground">@color/lightBackground</item>
        <item name="colorPendingTx">@color/lightPendingTx</item>
        <item name="colorReceivedTx">@color/lightReceiveTx</item>
        <item name="colorSentTx">@color/lightSendTx</item>
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryDark</item>

        <item name="txEmptyListDrawable">@drawable/ic_txemptylist</item>

        <item name="bottomSheetDialogTheme">@style/AppTheme.BottomSheetDialog</item>
        <item name="pinKeyboardTheme">@style/AppTheme.PinKeyboard</item>

        <item name="borderlessButtonStyle">@style/Widget.MaterialComponents.Button.TextButton</item>
        <item name="iconButtonStyle">@style/AppTheme.Button.OnlyIcon</item>
        <item name="toggleIconStyle">@style/AppTheme.Button.ToggleIcon</item>
    </style>

    <style name="AppTheme.Button.OnlyIcon" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="cornerRadius">48dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconTint">@color/sl_color_onsurface</item>
        <item name="iconGravity">textEnd</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Button.ToggleIcon" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="AppTheme.BottomSheetDialog" parent="@style/Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="colorAccent">@color/lightAccent</item>
        <item name="colorPrimary">@color/lightPrimary</item>
        <item name="colorPrimaryDark">@color/lightDarkPrimary</item>
        <item name="bottomSheetStyle">@style/AppTheme.BottomSheet</item>

        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryDark</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="AppTheme.BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_material_bottom_sheet</item>
        <item name="android:backgroundTint">?attr/colorSurface</item>
    </style>

    <style name="AppTheme.PinKeyboard" parent="@style/AppTheme.BottomSheetDialog">
        <item name="borderlessButtonStyle">@style/AppTheme.PinKeyboard.Button</item>
    </style>

    <style name="AppTheme.PinKeyboard.Button" parent="AppTheme.Button.OnlyIcon">
        <item name="iconTint">?attr/colorPrimary</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline4</item>
        <item name="cornerRadius">100dp</item>
    </style>

    <!-- Dark Theme (TODO Dark theme style) -->
    <style name="AppTheme.Dark" parent="AppTheme">
        <item name="colorPrimary">@color/darkPrimary</item>
        <item name="colorPrimaryDark">@color/darkDarkPrimary</item>
        <item name="colorAccent">@color/darkAccent</item>
        <item name="colorBackground">@color/darkBackground</item>
        <item name="colorSurface">@color/darkSurface</item>
    </style>

    <!-- Blue Theme (TODO Blue theme  style) -->
    <style name="AppTheme.Blue" parent="AppTheme">
        <item name="android:windowBackground">@color/blue_background</item>
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryDark">@color/blue_darkPrimary</item>
        <item name="colorAccent">@color/blue_accent</item>
        <item name="android:textColor">@color/blue_primary_text</item>
        <item name="android:textColorSecondary">@color/blue_secondary_text</item>
        <item name="android:textColorHint">@color/blue_secondary_text</item>
        <item name="android:textColorPrimary">@color/blue_primary_text</item>
        <item name="android:colorBackground">@color/blue_background</item>
        <item name="colorButtonNormal">@color/blue_background</item>
        <item name="android:textColorPrimaryInverse">@color/blue_secondary_text</item>
        <item name="android:navigationBarColor">@color/blue_darkPrimary</item>
        <item name="android:colorForeground">@color/blue_text_icons</item>
        <item name="android:textColorSecondaryInverse">@color/blue_secondary_text</item>
        <item name="colorBackgroundFloating">@color/blue_cardBackground</item>

        <item name="itemIconTint">@color/blue_text_icons</item>

        <item name="cardViewStyle">@style/AppTheme.Blue.CardView</item>
        <item name="buttonStyle">@style/AppTheme.Blue.Button</item>
    </style>

    <style name="AppTheme.Blue.Button" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@color/blue_primary</item>
        <item name="android:textColor">@color/blue_text_icons</item>
    </style>

    <style name="AppTheme.Blue.CardView">
        <item name="cardBackgroundColor">@color/blue_cardBackground</item>
    </style>

    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">?attr/colorPrimaryDark</item>
        <item name="colorPrimary">?attr/colorPrimary</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">?attr/colorBackgroundFloating</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
