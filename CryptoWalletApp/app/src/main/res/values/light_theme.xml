<resources>
    <!-- Light theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/lightPrimary</item>
        <item name="colorPrimaryDark">@color/lightDarkPrimary</item>
        <item name="colorAccent">@color/lightAccent</item>
        <item name="colorBackground">@color/lightBackground</item>
        <item name="colorPendingTx">@color/colorPendingTx</item>
        <item name="colorReceivedTx">@color/colorReceiveTx</item>
        <item name="colorSentTx">@color/colorSendTx</item>
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryDark</item>

        <item name="txEmptyListDrawable">@drawable/ic_txemptylist</item>

        <item name="bottomSheetDialogTheme">@style/AppTheme.BottomSheetDialog</item>
        <item name="pinKeyboardTheme">@style/AppTheme.PinKeyboard</item>
        <item name="fullScreenDialogTheme">@style/AppTheme.FullScreenDialog</item>

        <item name="borderlessButtonStyle">@style/Widget.MaterialComponents.Button.TextButton</item>
        <item name="iconButtonStyle">@style/AppTheme.Button.OnlyIcon</item>
        <item name="toggleIconStyle">@style/AppTheme.Button.ToggleIcon</item>
    </style>

    <style name="AppTheme.Button.OnlyIcon" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="cornerRadius">48dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconTint">@color/sl_color_onsurface</item>
        <item name="iconGravity">textEnd</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Button.ToggleIcon" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="AppTheme.BottomSheetDialog" parent="@style/Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="colorAccent">@color/lightAccent</item>
        <item name="colorPrimary">@color/lightPrimary</item>
        <item name="colorPrimaryDark">@color/lightDarkPrimary</item>
        <item name="bottomSheetStyle">@style/AppTheme.BottomSheet</item>

        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryDark</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="AppTheme.BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_material_bottom_sheet</item>
        <item name="android:backgroundTint">?attr/colorSurface</item>
    </style>

    <style name="AppTheme.PinKeyboard" parent="@style/AppTheme.BottomSheetDialog">
        <item name="borderlessButtonStyle">@style/AppTheme.PinKeyboard.Button</item>
        <item name="colorSuccess">@color/colorPinSuccess</item>
        <item name="colorError">@color/colorPinError</item>
    </style>

    <style name="AppTheme.PinKeyboard.Button" parent="AppTheme.Button.OnlyIcon">
        <item name="iconTint">?attr/colorPrimary</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline4</item>
        <item name="cornerRadius">100dp</item>
    </style>

    <style name="AppTheme.FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorAccent">@color/lightAccent</item>
        <item name="colorPrimary">@color/lightPrimary</item>
        <item name="colorPrimaryDark">@color/lightDarkPrimary</item>
        <item name="actionMenuTextColor">@color/lightAccent</item>

        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryDark</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <!-- Light colors -->
    <color name="lightPrimary">#4caf50</color>
    <color name="lightDarkPrimary">#388E3C</color>
    <color name="lightAccent">#FF9800</color>
    <color name="lightBackground">#EEEEEE</color>

</resources>
