{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "sourceMap": true,
        "watch": true,
        "outDir": "build",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "downlevelIteration": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "@types"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "build",
        "bin",
        ".vscode"
    ]
}